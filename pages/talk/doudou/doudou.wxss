.content {
  background-color: #edebeb;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
  height: 100%;
  padding-bottom: 90rpx;
  box-sizing: border-box;
}

.content .message-item {
  position: relative;
  padding: 40rpx 40rpx 0;
}

.content .message-item-right {
  text-align: right;
}

.message-item-left .message-avatar {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
}

.message-item-right .message-avatar {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
}

.message-item .message-avatar image {
  width: 100%;
  height: 100%;
}

.message-item-left .message-content {
  position: relative;
  background-color: #fff;
  margin: 0 20rpx 0 140rpx;
  display: inline-block;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 460rpx;
}

.message-item-right .message-content {
  position: relative;
  background-color: #ff9800;
  margin: 0 140rpx 0 20rpx;
  display: inline-block;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 460rpx;
}

.message-item-left .message-arrow {
  position: absolute;
  left: -38rpx;
  border-color: transparent #fff transparent transparent;
  border-style: dashed dashed solid;
  border-width: 20rpx;
}

.message-item-right .message-arrow {
  position: absolute;
  right: -38rpx;
  border-color: transparent transparent transparent #ff9800;
  border-style: dashed dashed solid;
  border-width: 20rpx;
}

.message-item-left .is-read {
  position: absolute;
  background-color: #8BC34A;
  font-size: 24rpx;
  top: 2rpx;
  right: -80rpx;
  color: #fff;
  line-height: 40rpx;
  width: 60rpx;
  border-radius: 6rpx;
  text-align: center;
}

.message-item-right .is-read {
  position: absolute;
  background-color: #8BC34A;
  font-size: 24rpx;
  top: 2rpx;
  left: -80rpx;
  color: #fff;
  line-height: 40rpx;
  width: 60rpx;
  border-radius: 6rpx;
  text-align: center;
}

.message-item-left .message-text, .message-item-right .message-text {
  display: inline-block;
  line-height: 20px;
  font-size: 32rpx;
  word-wrap: break-word;
  word-break: break-all;
  text-align: left;
}

.message-item-right .message-text {
  color: #fff;
}

.message-item  .message-time {
  padding: 40rpx 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #a3a2a2;
}

.bottom-mark-top {
  height: 20rpx;
}

.bottom-mark {
  height: 0;
}

.bottom-box {
  position: absolute;
  bottom: 0;
  z-index: 2;
  width: 100%;
}

.message-input {
  box-sizing: border-box;
  height: 90rpx;
  background-color: #fff;
  padding: 10rpx;
  padding-right: 90rpx;
}

.message-input input {
  font-size: 32rpx;
  border: 1px solid #ddd;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}

.quick-message {
  position: absolute;
  height: 90rpx;
  width: 90rpx;
  box-sizing: border-box;
  padding: 12rpx;
  top: 0;
  right: 0;
}

.quick-message image {
  width: 100%;
  height: 100%;
}
