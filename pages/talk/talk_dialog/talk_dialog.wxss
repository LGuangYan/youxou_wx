/* talk_dialog.wxss */

.hover-bg {
  background-color: #edebeb;
}

.hover-default {
  background-color: #e37e35 !important;
}

.hover-cancel {
  background-color: #739e42 !important;
}

.base-info {
  position: relative;
  z-index: 4;
  height: 200rpx;
  background-color: #fff;
  padding:16rpx 32rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.base-info .info-left, .base-info .info-right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}

.base-info .info-item {
  display: inline-block;
  color: #BBBBBB;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.info-item image {
  width: 26rpx;
  height: 26rpx;
  margin-bottom: -4rpx;
}

.info-left-top .resume-name {
  font-size: 28rpx;
  color: #000;
}

.info-left-top .invite-type {
  color: #666666;
  font-size: 24rpx;
  background-color: #EDEBEB;
  margin-left:20rpx;
}

.info-left-bottom {
  color: #A3A2A2;
  font-size: 24rpx;
  margin-top:12rpx;
  white-space:nowrap;
}

.info-right {
  text-align: right;
}

.info-right .resume-salary {
  color: #FF9800;
  font-size: 40rpx;
}

.info-right .resume-distance {
  color: #BBBBBB;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.invite-buttons {
  position: relative;
  z-index: 3;
  height: 60rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.buttom-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  line-height: 60rpx;
}

.buttom-item:first-child {
  background-color: #ff9800;
}

.buttom-item:last-child {
  background-color: #8bc34a;
}

.content {
  background-color: #edebeb;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
  height: 100%;
  padding-top: 260rpx;
  padding-bottom: 90rpx;
  box-sizing: border-box;
}

.content .message-item {
  position: relative;
  padding: 40rpx 40rpx 0;
}

.content .message-item-right {
  text-align: right;
}

.message-item-left .message-avatar {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  background-color:#fff;
}

.message-item-right .message-avatar {
  position: absolute;
  right: 40rpx;
  top: 40rpx;
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  background-color:#fff;
}

.message-item .message-avatar image {
  width: 100%;
  height: 100%;
}

.message-item-left .message-content {
  position: relative;
  background-color: #fff;
  margin: 0 20rpx 0 140rpx;
  display: inline-block;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 460rpx;
}

.message-item-right .message-content {
  position: relative;
  background-color: #ff9800;
  margin: 0 140rpx 0 20rpx;
  display: inline-block;
  box-sizing: border-box;
  padding: 20rpx;
  border-radius: 10rpx;
  word-wrap: break-word;
  word-break: break-all;
  max-width: 460rpx;
}

.message-item-left .message-arrow {
  position: absolute;
  left: 0;
  margin-left: -38rpx;
  border-color: transparent #fff transparent transparent;
  border-style: dashed dashed solid;
  border-width: 20rpx;
}

.message-item-right .message-arrow {
  position: absolute;
  right: 0;
  margin-right: -38rpx;
  border-color: transparent transparent transparent #ff9800;
  border-style: dashed dashed solid;
  border-width: 20rpx;
}

.message-item-left .is-read {
  position: absolute;
  background-color: #8BC34A;
  font-size: 24rpx;
  top: 2rpx;
  right: -80rpx;
  color: #fff;
  line-height: 40rpx;
  width: 60rpx;
  border-radius: 6rpx;
  text-align: center;
}

.message-item-right .is-read {
  position: absolute;
  background-color: #8BC34A;
  font-size: 24rpx;
  top: 2rpx;
  left: -80rpx;
  color: #fff;
  line-height: 40rpx;
  width: 60rpx;
  border-radius: 6rpx;
  text-align: center;
}

.message-item-left .message-text, .message-item-right .message-text {
  display: inline-block;
  line-height: 20px;
  font-size: 32rpx;
  word-wrap: break-word;
  word-break: break-all;
  text-align: left;
}

.message-item-right .message-text {
  color: #fff;
}

.message-item  .message-time {
  padding: 40rpx 40rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #a3a2a2;
}

.bottom-mark-top {
  height: 20rpx;
}

.bottom-mark {
  height: 0;
}

.bottom-box {
  position: absolute;
  bottom: 0;
  z-index: 2;
  width: 100%;
}

.message-input {
  box-sizing: border-box;
  height: 90rpx;
  background-color: #fff;
  padding: 10rpx;
  padding-right: 90rpx;
}

.message-input input {
  font-size: 32rpx;
  border: 1px solid #ddd;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  width: 100%;
  height: 100%;
}

.quick-message {
  position: absolute;
  height: 90rpx;
  width: 90rpx;
  box-sizing: border-box;
  padding: 12rpx;
  top: 0;
  right: 0;
}

.quick-message image {
  width: 100%;
  height: 100%;
}

.quick-content {
  background-color: #fff;
}

.quick-message-item {
  height: 70rpx;
  padding: 0 20rpx;
   overflow: hidden; 
}

.quick-message-item .quick-message-text {
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  font-size: 24rpx;
  line-height: 70rpx;
  text-overflow: ellipsis;
}

.edit-message {
  color: #ff9800;
  height: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 70rpx;
}

.edit-message image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -8rpx;
}

.edit-page {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 5;
  background-color: #fff;
}

.edit-page .edit-tips {
  font-size: 24rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-top: 1px solid #999;
  box-sizing: border-box;
}

.edit-message-item {
  /* height: 70rpx; */
  padding: 0 20rpx;
}

.edit-message-item .edit-message-text {
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  padding-left: 50rpx;
  font-size: 24rpx;
  line-height: 70rpx;
  position: relative;
  padding-right: 60rpx;
}

.add-new-message image, .edit-message-text image {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: -15rpx;
  padding: 10rpx 10rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
}

.edit-message-text textarea {
  font-size: 24rpx;
  min-height: 70rpx;
  position: relative;
  top: 4rpx;
  width: auto;
}

.edit-message-text .delete-message-button {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 100%;
  background-color: #e51c23;
  color: #fff;
  justify-content: center;
  align-items: center;
  display: -webkit-flex;
}

.edit-page .submit-buttons {
  margin-top: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.submit-buttons .button-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
}

.button-item.submit {
  background-color: #ff9800;
}

.button-item.cancel {
  background-color: #8bc34a;
}

.control-page {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 3;
  box-sizing: border-box;
  background-color: #fff;
  height: 100%;
  width: 100%;
  padding-top: 260rpx;

}

.control-page .warn {
  display: block;
  margin: 20rpx auto;
  width: 160rpx;
  height: 160rpx;
}

.control-page .tips {
  font-size: 28rpx;
  text-align: center;
  line-height: 140rpx;
}

.control-page button {
  margin-bottom: 40rpx;
}