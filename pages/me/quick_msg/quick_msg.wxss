/* quick_msg.wxss */

.edit-message {
  color: #ff9800;
  height: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  line-height: 70rpx;
}

.edit-message image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: -8rpx;
}

.edit-page {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 5;
  background-color: #fff;
}

.edit-page .edit-tips {
  font-size: 24rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-top: 1px solid #999;
  box-sizing: border-box;
}

.edit-message-item {
  /* height: 70rpx; */
  padding: 0 20rpx;
}

.edit-message-item .edit-message-text {
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
  padding-left: 50rpx;
  font-size: 24rpx;
  line-height: 70rpx;
  position: relative;
  padding-right: 60rpx;
}

.add-new-message image, .edit-message-text image {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: -15rpx;
  padding: 10rpx 10rpx;
  position: absolute;
  top: 10rpx;
  left: 0;
}

.edit-message-text textarea {
  font-size: 24rpx;
  min-height: 70rpx;
  position: relative;
  top: 4rpx;
  width: auto;
}

.edit-message-text .delete-message-button {
  position: absolute;
  right: 0;
  top: 0;
  width: 100rpx;
  height: 100%;
  background-color: #e51c23;
  color: #fff;
  justify-content: center;
  align-items: center;
  display: -webkit-flex;
}

.edit-page .submit-buttons {
  margin-top: 50rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.submit-buttons .button-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #fff;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  text-align: center;
}

.button-item.submit {
  background-color: #ff9800;
}

.button-item.cancel {
  background-color: #8bc34a;
}