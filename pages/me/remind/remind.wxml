<!--remind.wxml-->
<view class="weui-cells__title">提醒设置</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_switch">
    <view class="weui-cell__bd">微信提醒</view>
    <view class="weui-cell__ft">
      <switch checked="{{wx_remind}}" data-name="wx_remind" bindchange="optionChange" />
    </view>
  </view>
  <view class="weui-cell weui-cell_switch">
    <view class="weui-cell__bd">短信提醒</view>
    <view class="weui-cell__ft">
      <switch checked="{{dx_remind}}" data-name="dx_remind" bindchange="optionChange"  />
    </view>
  </view>
  <view class="weui-cell weui-cell_switch">
    <view class="weui-cell__bd">邮件提醒</view>
    <view class="weui-cell__ft">
      <switch checked="{{email_remind}}" data-name="email_remind" bindchange="optionChange"  />
    </view>
  </view>
</view>