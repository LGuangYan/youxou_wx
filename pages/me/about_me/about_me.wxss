/* about_me.wxss */

.me-hd {
  height: 550rpx;
  background-color: #edebeb;
  position: relative;
  z-index: 2;
}

.me-hd .hd-bgbox {
  position: relative;
  height: 330rpx;
  overflow: hidden;
}

.me-hd .bg-img {
  width: 100%;
}

.me-hd .company-name {
  position: absolute;
  width: 100%;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  bottom: 40rpx;
  text-shadow:0px 0px 10px #000;
}

.me-hd .avatar {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.me-hd .avatar image {
  width: 100%;
  height: 100%;
}

.me-hd .option {
  position: absolute;
  right: 0;
  top: 0;
  padding: 20rpx;
  box-sizing: border-box;
  width: 90rpx;
  height: 90rpx;
  z-index: 3;
}

.me-hd .option image {
  width: 100%;
  height: 100%;
}

.me-bd {
  box-sizing: border-box;
  padding-top: 330rpx;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}

.me-bd .button-list {
  position: relative;
  z-index: 2;
  padding: 20rpx 0;
  background-color: #fff;
  margin-bottom: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-top: 1px solid #d9d9d9;
}

.button-item {
  padding: 20rpx 0;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  border-right: 1px solid #d9d9d9;
}

.button-item:last-child {
  border-right: none;
}

.button-item image {
  width: 50rpx;
  height: 50rpx;
}

.button-item .home-text {
  color: #ff9800;
}

.button-item .auth-text {
  color: #009688;
}

.button-item .promotion-text {
  color: #e51c23;
}

.cells-list {
  position: absolute;
  padding-top: 550rpx;
  box-sizing: border-box;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  z-index: 1;
}

.weui-cells::after, .weui-cells::before {
  border: none;
}

.company-info {
  box-sizing: border-box;
  padding: 370rpx 0 0;
  position: absolute;
  top: 0;
  left: 0;
  /* height: 100%; */
  width: 100%;
  background-color: #fff;
}

.company-info .info-item {
  position: relative;
}

.company-info .info-icon {
  position: absolute;
  top: 0;
  left: 0;
  padding: 20rpx;
  box-sizing: border-box;
  width: 80rpx;
  height: 80rpx;
}

.info-icon image {
  width: 100%;
  height: 100%;
}

.company-info .info-content {
  padding-left: 80rpx;
  box-sizing: border-box;
  width: 100%;
}

.info-content .info-text {
  font-size: 24rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #d9d9d9;
}

.welfare-item {
  display: inline-block;
  padding: 6rpx 10rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  background-color: #ff9800;
  border-radius: 6rpx;
  color: #fff;
  margin-right: 20rpx;
}

.company-info .info-image {
  padding-top:20rpx;
}

.company-info .info-image-item {
  float: left;
  width: 200rpx;
  height:200rpx;
  overflow: hidden;  
  background-size: cover;
  background-repeat:no-repeat;
  margin-left: 37rpx;
  margin-top:40rpx;
}

