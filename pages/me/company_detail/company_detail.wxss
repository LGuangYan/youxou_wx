/* company_detail.wxss */

.logo {
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
  margin-bottom: 100rpx;
}

.avatar {
  position: absolute;
  height: 200rpx;
  width: 200rpx;
  border: 1px solid #999;
  background-color: #fff;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.avatar image {
  width: 100%;
  height: 100%;
}

.avatar-button {
  position: absolute;
  left: 50%;
  top: 50%;
  margin: 0;
  transform: translate(-50%, 150rpx);
}
