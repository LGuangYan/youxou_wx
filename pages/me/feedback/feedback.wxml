<!--feedback.wxml-->
<view class="page">
  <view class="service">
    <navigator url="/pages/talk/doudou/doudou?theme_id={{doudouId}}" open-type="navigateTo" class="service-online service-item" hover-class="weui-cell_active">
      <image src="/assets/ui/msg.png"></image>
      <text>在线客服</text>
    </navigator>
    <view class="service-hotline service-item" bindtap='hotLineTap' hover-class="weui-cell_active">
      <image src="/assets/ui/phone.png"></image>
      <text>热线客服</text>
    </view>
  </view>

  <view class="weui-cells__title">帮助攻略</view>
  <view class="weui-cells weui-cells_after-title">
    <navigator url="/pages/me/article/article?title=招聘攻略" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">招聘攻略</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="/pages/me/article/article?title=审核流程" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">审核流程</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>

  <navigator url="/pages/me/feedback_history/feedback_history" open-type="navigateTo" class="bottom-button">
    <button type="primary">我要反馈</button>
  </navigator>

</view>