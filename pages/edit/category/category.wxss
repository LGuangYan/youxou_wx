/* category.wxss */

.page {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.active {
  color: #ff9800;
}

.category-cells {
  height: 100%;
  margin: 0;
  line-height: 80rpx;
  font-size: 28rpx;
}

.mask {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.5;
}

.aside {
  position: absolute;
  top: 0;
  right: 0;
  width: 640rpx;
  height: 100%;
  transition: right 0.3s;
}

.aside-left, .aside-right {
  position: absolute;
  top: 0;
  height: 100%;
  width: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 24rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.aside-left {
  left: 0;
  background-color: #fff;
}

.aside-right {
  right: 0;
  background-color: #dedede;
}
