/* manage_index.wxss */

page, .page, .page__bd {
  height: 100%;
}

.page__bd {
  padding-bottom: 0;
}

.weui-tab__content {
  padding-top: 40rpx;
  text-align: center;
}

/* 职位 */

.job-list {
  padding-top: 57px;
  box-sizing: border-box;
  overflow: hidden;
  text-align: left;
  height: 100%;
  position: relative;
}

.job-list-container {
  height: 100%;
  position: relative;
}

.job-list-button {
  padding: 10px 0;
  position: absolute;
  width: 100%;
  top: 0;
  z-index: 3
}


.job-hd {
  position: relative;
  height: 120rpx;
  box-sizing: border-box;
  margin-right: 30rpx;
  padding: 10rpx 30rpx 10rpx 0;
  border-right: 1px solid #d9d9d9;
}

.deliver {
  width: 100rpx;
  height: 100rpx;
  display: block;
  text-align: center;
}

.deliver .deliver-count {
  text-align: center;
  font-size: 40rpx;
}

.deliver .deliver-text {
  font-size: 24rpx;
}

.tips {
  color: #999;
  font-size: 28rpx;
}

/*求职者  */

.candidate-list {
  padding-top: 41px;
  box-sizing: border-box;
  overflow: hidden;
  text-align: left;
  height: 100%;
}

.candidate-item {
  padding: 20rpx 30rpx;
  background-color:#fff;
}

.candidate-item .avatar {
  border-radius: 50%;
  overflow: hidden;
}

.candidate-bd text {
  background-color: #edebeb;
  margin-right: 10rpx;
  color: #666;
  text-align: center;
  line-height: 40rpx;
  padding: 0 10rpx;
}

.candidate-ft {
  text-align: right;
}

.candidate-ft .is-read {
  text-align: center;
  width: 60rpx;
  display: inline-block;
  background-color: #8bc34a;
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
}

.tag-item .tag-list {
}

.candidate-ft .tag-item {
  text-align: center;
  display: inline-block;
  background-color: #8bc34a;
  color: #fff;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
  padding: 0 10rpx
}

.candidate-ft .salary {
  color: #ff9800;
  font-size: 32rpx;
  margin-top: 30rpx;
}

.job-buttons {
  margin-bottom: -85rpx;
}
