/**app.wxss**/
@import 'weui.wxss';

page {
  background-color: #f8f8f8;
  height: 100%;
  width: 100%;
  font-family: microsoft yahei;
  overflow-x: hidden;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.poa {
  position: absolute;
}

.por {
  position: relative;
}

.clearfix:after {
  content: "";
  height: 0;
  line-height: 0;
  display: block;
  visibility: hidden;
  clear: both;
}

.clearfix {
  zoom: 1;
}

.tac {
  text-align: center;
}

.tar {
  text-align: right;
}

.tal {
  text-align: left;
}

.mgl20 {
  margin-left: 20rpx;
}

.mgr20 {
  margin-right: 20rpx;
}

.mgb20 {
  margin-bottom: 20rpx;
}

.mgt40 {
  margin-top: 40rpx;
}

.mgt20 {
  margin-top: 20rpx;
}

.mgt10 {
  margin-top: 10rpx;
}

.mgl30 {
  margin-left: 30rpx;
}

.h100 {
  height: 100%;
}

button {
  margin: 0 10rpx;
  font-size: 28rpx;
}

button[type="primary"] {
  color: #fff;
  border-color: transparent;
  border: 1px solid transparent;
  background-color: #ff9800;
}

.button-hover[type="primary"] {
  background-color: #e37e35;
}

button[type="deactive"] {
  color: #ff9800;
  background-color: #f8f8f8;
  border: 1px solid #ff9800;
}

.button-hover[type="deactive"] {
  background-color: #dedede;
  color: #cc7a00;
  border: 1px solid #cc7a00;
}

button[type="primary"]::after, button[type="deactive"]::after {
  display: none;
}

button[size="tini"] {
  display: inline-block;
  line-height: 1.5;
  font-size: 12px;
  padding: 0 1em;
  margin: 0 6rpx;
}

button[size="mini"]::after {
  display: none;
}
button[size="mini"][type="default"] {
  border: 1px solid rgba(0, 0, 0, 0.2);
  padding: 0 0.5em
}

.weui-search-bar {
  padding: 8px 6px;
}

.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #ff9800;
  white-space: nowrap;
}

.logo {
  height: 300rpx;
  line-height: 300rpx;
  text-align: center;
}

.weui-cell_access:active {
  background-color: #ececec;
}

.weui-navbar__item.weui-bar__item_on {
  color: #ff9800;
}

.weui-navbar__slider {
  background-color:  #ff9800;
}

.page__hd {
  padding: 80rpx;
}

.page__title {
  text-align: left;
  font-size: 40rpx;
  font-weight: 400;
}

.page__desc {
  margin-top: 10rpx;
  color: #888;
  text-align: left;
  font-size: 28rpx;
}

.filter-bar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 46px;
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #d7d6dc;
}

.filter-item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 8px 0;
  text-align: center;
  font-size: 15px;
}

.filter-item.actived {
  background-color: #ff9800;
  color: #fff;
}

.filter-item-text {
  color: 1aad19;
}

.bggrey {
  background-color: #f8f8f8;
}

.loui-talk-top-hd {
  width: 160rpx;
  position: absolute;
}

.loui-talk-top-avatar {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
}

.loui-talk-top-avatar image {
  width: 100%;
  height: 100%;
}

.loui-talk-top-bd {
  box-sizing: border-box;
  padding-left: 100rpx;
  padding-right: 100rpx;
  font-size: 28rpx;
}

.weui-cell__bd {
  min-width:200rpx;
}

.global-bottom-box {
  height: 20rpx;
}